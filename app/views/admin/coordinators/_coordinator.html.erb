<div class="panel panel-default masonry_element coordinator">
  <div class="panel-body">
    <div class="pull-right buttons">
      <a class="edit_coordinator_link btn btn-info btn-sm" data-toggle="modal" data-target="#edit_coordinator_<%= coordinator.id %>_modal" title="Изменить логин/пароль">
	<span class="glyphicon glyphicon-pencil"></span>
      </a>
      <%= link_to admin_coordinator_path(coordinator), method: :delete, class: 'delete_coordinator btn btn-sm btn-danger', title: "Удалить", data: { confirm: "Координатор будет удален. Подтверждаете действие?" } do %>
	<span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </div>
    <h2 class="h4">
      <%= coordinator.login %>
    </h2>
  </div>
</div>
<div id="edit_coordinator_<%= coordinator.id %>_modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
	<button class="close" data-dismiss="modal" aria-label="Close">
	  <span aria-hidden="true">&times;</span>
	</button>
	<h2 class="h3 text-center">Изменить логин/пароль</h2>
      </div>
      <div class="modal-body">
	<%= render 'shared/form', object: coordinator %>
      </div>
    </div>
  </div>
</div>
