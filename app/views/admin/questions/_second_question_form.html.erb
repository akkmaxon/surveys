<%= form_for [:admin, object] do |f| %>
  <%= f.hidden_field :opinion_subject, value: "Я" %>
  <%= f.hidden_field :criterion, value: "Свободные ответы" %>
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="pull-right">
	<a class="btn btn-link cancel_question">Отмена</a>
	<%= f.submit "Подтвердить", class: 'btn btn-primary', id: 'submit_2q' %>
      </div>
      <h3 class="h4">
        Задание 2
      </h3>
    </div>

    <div class="panel-body">
      <div class="row">
	<div class="form-group col-md-4">
	  <%= f.label :number, "Номер" %>
	  <%= f.text_field :number, id: 'field_2q_number', class: 'form-control',
	    value: set_number_for_question(object, 'second', Question.all_second_questions.last) - 200,
	    required: 'required' %>
	</div>
	<div class="form-group col-md-8">
	  <%= f.label :audience, "Аудитория" %> <br>
	  <div data-toggle="buttons" class="btn-group">
	    <label class="btn btn-default">
	      <%= f.radio_button :audience, "Менеджмент", id: 'field_2q_audience_1', required: 'required' %>
	      Менеджмент
	    </label>
	    <label class="btn btn-default">
	      <%= f.radio_button :audience, "Рабочая специальность", id: 'field_2q_audience_2', required: 'required' %>
	      Рабочая специальность
	    </label>
	  </div>
	</div>
      </div>
      <%= f.label :sentence, "Текст" %>
      <%= f.text_area :sentence, class: 'form-control', id: 'field_2q_sentence', required: 'required', rows: 3 %>
    </div>
  </div>
<% end %>
