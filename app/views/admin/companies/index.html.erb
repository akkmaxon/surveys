<h1 class="header">Список компаний</h1>

<a id="add_company" class="btn btn-success pull-right">Добавить компанию</a>

<%= form_for [:admin, @new_company] do |f| %>
  <div class="form-group">
    <%= f.label :name, "Имя компании" %>
    <div class="input-group">
      <%= f.text_field :name, class: 'form-control' %>
      <span class="input-group-btn">
	<%= f.submit "Добавить", class: 'btn btn-primary' %>
      </span>
    </div>
  </div>
<% end %>

<div class="list-group" id="all_companies">
  <% @companies.each do |company| %>
    <div class="list-group-item company">
      <div class="pull-right buttons">
	<a class="update_company btn btn-sm btn-info">Изменить</a>
	<%= link_to "Удалить", admin_company_path(company), method: :delete, class: "delete_company btn btn-sm btn-danger" %>
      </div>
      <h2 class="h4 company_name">
	<%= company.name %>
      </h2>
      <%= form_for [:admin, company] do |f| %>
	<div class="input-group input-group-sm">
	  <%= f.text_field :name, class: 'form-control' %>
	  <span class="input-group-btn">
	    <%= f.submit "Изменить", class: 'btn btn-primary' %>
	  </span>
	</div>
      <% end %>
    </div>
  <% end %>
</div>
