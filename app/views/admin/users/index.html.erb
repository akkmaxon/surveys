<div class="container">
  <h1 class="header">Респонденты <span class="badge"><%= @users.count %></span></h1>

  <div id="manage_bar" class="row">
    <div class="col-md-4 col-md-offset-4">
      <input id="search_users" type="text" placeholder="Поиск"></input>
    </div>
    <div class="col-md-4">
      <%= link_to "Создать респондента", new_admin_user_path, class: 'btn btn-success', id: 'add_user' %>
    </div>
  </div>
</div>

<div class="container-fluid" id="all_users">
  <% @users.each do |user| %>
    <div class="panel panel-default user">
      <div class="panel-body">
	<h2 class="h4 pull-right">
	  Surveys <span class="badge"><%= user.completed_surveys.count %></span>
	</h2>
	<h2 class="h4">
	  <%= link_to user.login, admin_user_path(user), class: 'show_user' %>
	</h2>
      </div>
    </div>
  <% end %>
</div>
