<div class="container">
  <h1 class="header">Респонденты <span class="badge"><%= @users.count %></span></h1>

  <div id="manage_bar" class="row">
    <div class="col-md-4">
      <%= error_explanation_for @user %>
      <% if session['user_credentials'] %>
	<%= render partial: 'admin/shared/person_for_save', locals: { session_key: 'user_credentials', address: admin_user_path(User.find_by(login: session['user_credentials']['login']), :pdf) } %>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <a class="btn btn-success" id="add_user_link" data-toggle="modal" data-target="#new_user_modal">
	<span class="glyphicon glyphicon-plus"></span>
	Создать респондента
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div id="new_user_modal" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
	  <div class="modal-content">
	    <div class="modal-header">
	      <button class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	      </button>
	      <h2 class="h3 text-center">Создать респондента</h2>
	    </div>
	    <div class="modal-body">
	      <%= render 'admin/shared/form', object: @user %>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>

<div class="masonry_container container-fluid">
  <% @users.each do |user| %>
    <%= render partial: 'shared/user', locals: { user: user, buttons: 'admin/users/buttons' } %>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
