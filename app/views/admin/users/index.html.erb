<div class="container">
  <h1 class="header">Респонденты <span class="badge"><%= @users.count %></span></h1>

  <div id="manage_bar" class="row">
    <div class="col-md-4 col-md-offset-4">
      <input id="search_users" type="text" placeholder="Поиск"></input>
    </div>
    <div class="col-md-4">
      <a class="btn btn-success" id="add_user_link" data-toggle="modal" data-target="#new_user_modal">
	<span class="glyphicon glyphicon-plus"></span>
	Создать респондента
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= error_explanation_for @user %>

      <div id="new_user_modal" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
	  <div class="modal-content">
	    <div class="modal-header">
	      <button class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	      </button>
	      <h2 class="h3 text-center">Создать респондента</h2>
	    </div>
	    <div class="modal-body">
	      <%= render 'form', object: @user %>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid" id="all_users">
  <% @users.each do |user| %>
    <div class="panel panel-default user">
      <div class="panel-body">
	<h2 class="h4 pull-right">
	  Опросы <span class="badge"><%= user.completed_surveys.count %></span>
	</h2>
	<h2 class="h4">
	  Логин: 
	  <%= link_to user.login, admin_user_path(user), class: 'show_user' %>
	</h2>
	<p>
	  ЗАРЕГИСТРИРОВАН: <%= user.creation_time %>
	</p>
      </div>
    </div>
  <% end %>
</div>
