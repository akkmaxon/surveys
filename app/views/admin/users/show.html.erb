<div class="container">
  <h1 class="header">Респондент <em><%= @user.login %></em></h1>

  <div id="manage_bar" class="row">
    <div class="col-md-4 col-md-offset-8">
      <a class="btn btn-success" id="edit_user_link" data-toggle="modal" data-target="#edit_user_modal">
	<span class="glyphicon glyphicon-pencil"></span>
	Изменить логин/пароль
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= error_explanation_for @user %>

      <div id="edit_user_modal" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
	  <div class="modal-content">
	    <div class="modal-header">
	      <button class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	      </button>
	      <h2 class="h3 text-center">Изменить логин/пароль</h2>
	    </div>
	    <div class="modal-body">
	      <%= render 'form', object: @user %>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>

  <div id="user_info" class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
	<div class="panel-body">
	  <p id="login">
	    Логин: <%= @user.login %>
	  </p>
	  <p id="password">
	    Пароль: <%= @user.decrypted_password %>
	  </p>
	</div>
      </div>
    </div>
    <div class="col-md-8" id="user_surveys">
      <% @user.surveys.each do |survey| %>
	<div class="panel panel-default user_survey">
	  <div class="panel-body">
	    <h3>
	      <%= survey.pass_date %>
	      (<%= survey.completed? ? "ЗАВЕРШЕН" : "НЕ ЗАВЕРШЕН" %>)
	    </h3>
	  </div>
	</div>
      <% end %>
    </div>
  </div>
</div>
