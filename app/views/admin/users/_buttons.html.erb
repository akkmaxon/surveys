<a class="edit_user_link btn btn-info btn-sm" data-toggle="modal" data-target="#edit_user_<%= user.id %>_modal" title="Изменить логин/пароль">
  <span class="glyphicon glyphicon-pencil"></span>
</a>
<div id="edit_user_<%= user.id %>_modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
	<button class="close" data-dismiss="modal" aria-label="Close">
	  <span aria-hidden="true">&times;</span>
	</button>
	<h2 class="h3 text-center">Изменить логин/пароль</h2>
      </div>
      <div class="modal-body">
	<%= render 'admin/shared/form', object: user %>
      </div>
    </div>
  </div>
</div>
