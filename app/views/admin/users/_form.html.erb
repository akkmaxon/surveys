<%= form_for [:admin, object] do |f| %>
  <div class="form-group">
    <%= f.label :login, "Логин" %>
    <div class="input-group">
      <%= f.text_field :login, class: 'form-control', required: 'required' %>
      <span class="input-group-btn">
	<a id="generate_login" class="btn btn-default">Генерировать логин</a>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Пароль(не менее 6 символов)" %>
    <div class="input-group">
      <%= f.text_field :password, class: 'form-control', required: 'required' %>
      <span class="input-group-btn">
	<a id="generate_password" class="btn btn-default">Генерировать пароль</a>
      </span>
    </div>
  </div>

  <%= f.submit "Подтвердить", class: 'btn btn-primary btn-lg btn-block' %>
<% end %>
