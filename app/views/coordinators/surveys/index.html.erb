<div class="container">
  <h1 class="header">
    Опросы (<%= @filter_name %>) <span class="badge"><%= @surveys.count %></span>
  </h1>
</div>

<section class="masonry_container container-fluid">
  <% @surveys.each do |survey| %>
    <%= render partial: 'surveys/survey_thumb', locals: { survey: survey, link: coordinators_survey_path(survey) } %>
  <% end %>
</section>

<div class="text-center">
  <%= will_paginate @surveys, renderer: BootstrapPagination::Rails %>
</div>
