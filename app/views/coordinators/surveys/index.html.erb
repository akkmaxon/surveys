<div class="container">
  <h1 class="header">
    Опросы
    <%= "(" + params[:filter] + ")" if params.key?(:filter) %>
    <span class="badge"><%= @surveys.count %></span>
  </h1>
</div>

<section class="masonry_container container-fluid">
  <% @surveys.each do |survey| %>
    <%= render partial: 'surveys/survey_thumb', locals: { survey: survey, link: coordinators_reports_survey_path(survey.to_param) } %>
  <% end %>
</section>

<div class="text-center">
  <%= will_paginate @surveys, renderer: BootstrapPagination::Rails %>
</div>
