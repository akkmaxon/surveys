<div class="container">
  <h1 class="header">Опросы <span class="badge"><%= @surveys.count %></span>
  </h1>

  <div id="manage_bar" class="row">
    <div class="col-md-4 col-md-offset-4">
      <input id="search_surveys" type="text" placeholder="Поиск"></input>
    </div>
  </div>
</div>

<section id="all_surveys" class="container-fluid">
  <% @surveys.each do |survey| %>
    <div class="panel panel-default survey">
      <div class="panel-body">
	<div class="buttons pull-right">
	  <%= link_to coordinator_user_survey_path(survey.user, survey), class: 'btn btn-primary show_survey' do %>
	    <span class="glyphicon glyphicon-stats"></span>
	  <% end %>
	</div>
	<h2 class="h4">
	  <small>РЕСПОНДЕНТ:</small> <%= survey.user.login %>
	</h2>
	<p>
	  <%= survey.completed? ? survey.pass_date : "Не завершен" %>
	</p>
      </div>
    </div>
  <% end %>
</section>

<div class="text-center">
  <%= will_paginate @surveys, renderer: BootstrapPagination::Rails %>
</div>
