<div class="panel panel-default masonry_element survey">
  <div class="panel-body">
    <div class="buttons pull-right">
      <%= link_to link, class: 'btn btn-sm btn-primary show_report', title: "Отчет" do %>
	<span class="glyphicon glyphicon-stats"></span>
      <% end %>
    </div>
    <h2 class="h4">
      <span class="glyphicon glyphicon-calendar" title="Дата"></span>
      <%= survey.completed? ? survey.pass_date : "Не завершен" %>
    </h2>
    <% unless user_signed_in? %>
      <h2 class="h4">
	<span class="glyphicon glyphicon-user" title="Респондент"></span>
	<%= survey.user.login %>
      </h2>
    <% end %>
    <h2 class="h4">
      <span class="glyphicon glyphicon-envelope" title="Email"></span>
      <small><%= survey.user_email %></small>
    </h2>
    <h2 class="h4">
      <span class="glyphicon glyphicon-comment" title="Отношение к опросу"></span>
      <small><%= survey.user_agreement %></small>
    </h2>
  </div>
</div>
