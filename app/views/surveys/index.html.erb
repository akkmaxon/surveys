<div class="container">
  <h1 class="header">Завершенные опросы</h1>
</div>

<section id="masonry_container" class="container-fluid">
  <% @surveys.each do |survey| %>
    <div class="panel panel-default masonry_element survey">
      <div class="panel-body">
	<div class="buttons pull-right">
	  <%= link_to survey_path(survey), class: 'btn btn-primary show_survey' do %>
	    <span class="glyphicon glyphicon-stats"></span>
	  <% end %>
	</div>
	<h2 class="h4">
	  <%= survey.pass_date %>
	</h2>
      </div>
    </div>
  <% end %>
</section>
