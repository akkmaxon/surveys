<div class="container">
  <h2 class="header">Смена пароля администратора</h2>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default" id="devise_form">
	<div class="panel-body">

	  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	    <%= devise_error_messages! %>
	    <%= f.hidden_field :reset_password_token %>

	    <div class="form-group">
	      <%= f.label :password, "Новый пароль" %>
	      <% if @minimum_password_length %>
		<em>(минимум <%= @minimum_password_length %> знаков)</em><br />
	      <% end %>
	      <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true, class: 'form-control' %>
	    </div>

	    <div class="form-group">
	      <%= f.label :password_confirmation, "Подтверждение" %><br />
	      <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: 'form-control' %>
	    </div>

	    <div class="actions">
	      <%= f.submit "Сменить пароль", class: 'btn btn-primary btn-lg btn-block surrounded' %>
	    </div>
	  <% end %>
	</div>
      </div>
    </div>
  </div>
</div>
