<div class="container">
  <h1 class="header">Вопросы <span class="badge">
      <%= @total_count %>
    </span>
  </h1>

  <div id="manage_bar" class="row">
    <div class="col-md-8">
      <div class="btn-group" data-toggle="buttons">
	<label class="btn btn-primary active" id="show_all_questions">
	  <input type="radio">
	    Все
	    <span class="badge"><%= @total_count %></span>
	  </input>
	</label>
	<label class="btn btn-primary" id="show_only_management_questions">
	  <input type="radio">
	    Менеджмент
	    <span class="badge"><%= Question.for_management_count %></span>
	  </input>
	</label>
	<label class="btn btn-primary" id="show_only_working_staff_questions">
	  <input type="radio">
	    Рабочая специальность
	    <span class="badge"><%= Question.for_working_staff_count %></span>
	  </input>
	</label>
      </div>
    </div>
    <div class="col-md-4">
      <div class="btn-group" id="add_question">
	<button class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-hashpopup="true" aria-expanded="true">
	  <span class="glyphicon glyphicon-plus"></span>
	  Добавить вопрос <span class="caret"></span>
	</button>
	<ul class="dropdown-menu">
	  <li><a id="add_first_question" data-toggle="modal" data-target="#new_first_question">Задание 1</a></li>
	  <li><a id="add_second_question" data-toggle="modal" data-target="#new_second_question">Задание 2</a></li>
	</ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
      <%= error_explanation_for @question %>

      <div id="new_first_question" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-lg" role="document">
	  <div class="modal-content">
	    <div class="modal-body">
	      <%= render 'first_question_form', object: @question %>
	    </div>
	  </div>
	</div>
      </div>
      <div id="new_second_question" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-lg" role="document">
	  <div class="modal-content">
	    <div class="modal-body">
	      <%= render 'second_question_form', object: @question %>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <section id="admin_first_questions" class="col-md-7">
    <h2 class="h3 text-center">Задание 1</h2>
    <% Question.all_first_questions.each do |question| %>
      <% cache question do %>
	<%= render partial: 'first_question', locals: { question: question } %>
      <% end %>
    <% end %>
  </section>

  <section id="admin_second_questions" class="col-md-5">
    <h2 class="h3 text-center">Задание 2</h2>
    <% Question.all_second_questions.each do |question| %>
      <% cache question do %>
	<%= render partial: 'second_question', locals: { question: question } %>
      <% end %>
    <% end %>
  </section>
</div>
