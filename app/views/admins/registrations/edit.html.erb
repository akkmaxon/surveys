<div class="container">
  <h1 class="header">Изменить свои регистрационные данные</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default" id="devise_form">
	<div class="panel-body">

	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	    <%= devise_error_messages! %>

	    <div class="form-group">
	      <%= f.label :login, "Логин" %><br />
	      <%= f.text_field :login, autofocus: true, class: 'form-control', required: 'required' %>
	    </div>

	    <div class="form-group">
	      <%= f.label :email %> <i>(укажите для возможности восстановления пароля)</i><br />
	      <%= f.email_field :email, class: 'form-control', required: 'required' %>
	    </div>

	    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	      <div>Ожидается подтверждение для: <%= resource.unconfirmed_email %></div>
	    <% end %>

	    <div class="form-group">
	      <%= f.label :password, "Пароль" %> <i>(оставить пустым, если не требуется изменение пароля)</i><br />
	      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	    </div>

	    <div class="form-group">
	      <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
	      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
	    </div>

	    <div class="form-group">
	      <%= f.label :current_password, "Текущий пароль" %> <i>(для подтверждения изменений)</i><br />
	      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', required: 'required' %>
	    </div>

	    <div class="actions">
	      <%= f.submit "Подтвердить", class: 'btn btn-primary btn-lg btn-block surrounded' %>
	    </div>
	  <% end %>
	</div>
      </div>
    </div>
  </div>
</div>
