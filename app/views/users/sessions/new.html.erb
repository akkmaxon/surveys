<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="header">Вход в систему</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
	  <%= f.label :login, "Логин" %><br />
	  <%= f.text_field :login, autofocus: true, class: 'form-control' %>
	</div>

	<div class="form-group">
	  <%= f.label :password, "Пароль" %><br />
	  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	</div>

	<% if devise_mapping.rememberable? -%>
	  <div class="field">
	    <%= f.check_box :remember_me %>
	    <%= f.label :remember_me, "Запомнить" %>
	  </div>
	<% end -%>

	<div class="actions">
	  <%= f.submit "Войти", class: 'btn btn-primary btn-lg btn-block' %>
	</div>
      <% end %>

      <%= link_to "Войти как администратор", new_admin_session_path, class: 'btn btn-link btn-lg btn-block' %>
    </div>
  </div>
</div>
