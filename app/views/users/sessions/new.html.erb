<div class="container">
  <h2 class="header">Вход в систему</h2>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default" id="devise_form">
	<div class="panel-body">

	  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <div class="form-group">
	      <%= f.label :login, "Логин" %><br />
	      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
	    </div>

	    <div class="form-group">
	      <%= f.label :password, "Пароль" %><br />
	      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
	    </div>

	    <% if devise_mapping.rememberable? -%>
	      <div class="field">
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me, "Запомнить" %>
	      </div>
	    <% end -%>

	    <div class="actions">
	      <%= f.submit "Войти", class: 'btn btn-primary btn-lg btn-block surrounded' %>
	    </div>
	  <% end %>

	  <%= link_to "Вход для координатора", new_coordinator_session_path, class: 'btn btn-link btn-block' %>
	  <%= link_to "Вход для администратора", new_admin_session_path, class: 'btn btn-link btn-block' %>
	</div>
      </div>
    </div>
  </div>
</div>
