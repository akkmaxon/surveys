<h2 class="header">Создать новый аккаунт</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :login, "Логин" %><br />
    <%= f.text_field :login, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Подтвердить пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Создать", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
